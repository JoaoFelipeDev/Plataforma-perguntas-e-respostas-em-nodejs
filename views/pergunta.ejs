<%- include ('partials/header.ejs') %>



<body>

    <%- include ('partials/navbar.ejs') %>

    <div class="container">
        <hr>
        <h1><%= pergunta.titulo %> </h1>
        <p><%= pergunta.descricao %> </p>
        <hr>
        <form action="/responder" method="post">

            <div class="form-group">
                <label for="">Responda:</label>
                <textarea placeholder="Digite sua resposta" class="form-control" name="corpo" id="" rows="3"></textarea>
                <br>
                <button  type="submit" class="btn btn-primary">Responder</button>
                <input type="hidden" name="pergunta" value="<%= pergunta.id %> ">
              </div>


        </form>
        <hr>
        <h3>Respostas</h3>
        <hr>
        <% respostas.forEach(resposta => { %>
            <br>
            <div class="card">
                <div class="card-body">
                    <p><%= resposta.corpo %> </p>
                </div>
            </div>
            
        <% }); %> 
    </div>


    

 
   
   
</body>
<%- include ('partials/footer.ejs') %>